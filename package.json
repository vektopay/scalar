{
  "name": "root",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "pnpm": "^10.16.1"
  },
  "packageManager": "pnpm@10.16.1",
  "pnpm": {
    "overrides": {
      "@types/node": "catalog:*",
      "@vektopay/typebox": "npm:@scalar/typebox@0.1.3"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@nestjs/common": "11.1.11",
        "@nestjs/core": "11.1.11",
        "chokidar": "4.0.3",
        "zod": "4.3.5"
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.33.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@playwright/test": "catalog:*",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "catalog:*",
    "cross-env": "^7.0.3",
    "eslint": "^9.38.0",
    "eslint-plugin-vue": "^9.31.0",
    "knip": "5.66.4",
    "lefthook": "^2.0.15",
    "nodemon": "^3.1.11",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "remark-cli": "^12.0.1",
    "remark-lint-no-dead-urls": "^2.0.1",
    "remark-validate-links": "^13.1.0",
    "shx": "catalog:*",
    "tailwindcss": "catalog:*",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.7.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.53.0",
    "vite-node": "catalog:*",
    "vitest": "catalog:*",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "catalog:*"
  },
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo --filter './packages/**' --concurrency=100% build",
    "build:integrations": "turbo --filter './integrations/**' build",
    "docker:build:prod": "sh -c ': \"${IMAGE_REPO:?Set IMAGE_REPO}\"; IMAGE_TAG=\"${IMAGE_TAG:-${GIT_SHA:-$(git rev-parse --short HEAD)}}\"; docker build -f integrations/docker/Dockerfile -t \"${IMAGE_REPO}:${IMAGE_TAG}\" integrations/docker'",
    "docker:push:prod": "sh -c ': \"${IMAGE_REPO:?Set IMAGE_REPO}\"; IMAGE_TAG=\"${IMAGE_TAG:-${GIT_SHA:-$(git rev-parse --short HEAD)}}\"; docker push \"${IMAGE_REPO}:${IMAGE_TAG}\"'",
    "docker:publish:prod": "pnpm docker:build:prod && pnpm docker:push:prod",
    "clean": "shx rm -rf \"**/dist\" \"**/.turbo\" \"**/.nuxt\" \"**/.next\" \"**/target\" \"**/node_modules\"",
    "clean:build": "pnpm clean && pnpm install && pnpm build:packages",
    "dev:docs": "npx @scalar/cli@latest project preview",
    "dev:vektopay-docs": "./scripts/dev-vektopay-docs.sh",
    "format:check": "pnpm prettier --check . && biome format",
    "format": "prettier --write . && biome format --write",
    "lint:check": "biome lint --diagnostic-level=error",
    "lint:vue": "pnpm eslint '**/*.vue'",
    "lint:markdown": "remark --frail .",
    "lint:knip": "cross-env NODE_ENV=test knip",
    "lint:fix": "biome lint --write && pnpm eslint '**/*.vue' --fix",
    "test": "vitest",
    "types:check": "turbo types:check",
    "types:check:raw": "pnpm run -r --parallel types:check",
    "types:build": "turbo types:build",
    "renovate:validate": "pnpm dlx --package renovate renovate-config-validator",
    "script": "pnpm --filter @vektopay/build-scripts start"
  },
  "remarkConfig": {
    "plugins": [
      "remark-validate-links",
      [
        "remark-lint-no-dead-urls",
        {
          "skipUrlPatterns": [
            "http://localhost"
          ]
        }
      ]
    ]
  }
}
